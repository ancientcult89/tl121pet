@using tl121pet.DAL.Interfaces
@using tl121pet.ViewModels
@inject IGradeRepository _gradeRepository
@model PersonVM
<partial name="_Validation"></partial>

<h5 class="bg-@Model.Theme text-white text-center p-2">@Model.Mode.ToString()</h5>

<form asp-action="Edit" method="post">
    @if (@Model.Mode == tl121pet.Storage.FormMode.Edit)
    {
        <div class="form-group">
            <label asp-for="SelectedPerson.PersonId"></label>
            <input class="form-control" asp-for="SelectedPerson.PersonId" readonly/>
        </div>        
    }
    <div class="form-group">
        <label asp-for="SelectedPerson.FirstName"></label>
        <div>
            <span asp-validation-for="SelectedPerson.FirstName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="SelectedPerson.FirstName" disabled="@Model.IsReadonly"/>
    </div>
    <div class="form-group">
        <label asp-for="SelectedPerson.LastName"></label>
        <div>
            <span asp-validation-for="SelectedPerson.LastName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="SelectedPerson.LastName" disabled="@Model.IsReadonly"/>
    </div>
    <div class="form-group">
        <label asp-for="SelectedPerson.SurName"></label>
        <div>
            <span asp-validation-for="SelectedPerson.SurName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="SelectedPerson.SurName" disabled="@Model.IsReadonly"/>
    </div>
    <div class="form-group">
        <label>Grade</label>
        <div>
            <span asp-validation-for="SelectedPerson.GradeId" class="text-danger"></span>
        </div>
        <select asp-for="SelectedPerson.GradeId" class="form-control" asp-items="@(new SelectList(_gradeRepository.GetAllGrades(), "GradeId", "GradeName"))" disabled="@Model.IsReadonly">
            <option value="" disabled selected>Choose a Grade</option>
        </select>
    </div>

    @if (Model.Mode != tl121pet.Storage.FormMode.Details)
    {
        <button class="btn btn-info mt-2" type="submit">
            Save
        </button>       
    }
    <a class="btn btn-secondary mt-2" asp-action="Index">Back</a>
</form>