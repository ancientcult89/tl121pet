@using tl121pet.Data
@model Person
@*@inject IProjectTeamService _projectTeamService
@inject IGradeService _gradeService*@
@inject DataContext _dataContext
<partial name="_Validation"></partial>

<h5 class="bg-info text-white text-center p-2">Edit</h5>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="PersonId"></label>
        <input class="form-control" asp-for="PersonId" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="FirstName"/>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="LastName"/>
    </div>
    <div class="form-group">
        <label asp-for="SurName"></label>
        <div>
            <span asp-validation-for="SurName" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="SurName"/>
    </div>
    <div class="form-group">
        <label asp-for="ProjectTeamId"></label>
        <div>
            <span asp-validation-for="ProjectTeamId" class="text-danger"></span>
        </div>
        <select asp-for="ProjectTeamId" class="form-control" asp-items="@(new SelectList(_dataContext.ProjectTeams.ToList(), "ProjectTeamId", "ProjectTeamName"))">
            <option value="" disabled selected>Choose a Team</option>
        </select>
    </div>
        <div class="form-group">
        <label asp-for="GradeId"></label>
        <div>
            <span asp-validation-for="GradeId" class="text-danger"></span>
        </div>
        <select asp-for="GradeId" class="form-control" asp-items="@(new SelectList(_dataContext.Grades.ToList(), "GradeId", "GradeName"))">
            <option value="" disabled selected>Choose a Suplier</option>
        </select>
    </div>

    <button class="btn btn-info mt-2" type="submit">
        Save
    </button>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back</a>
</form>