@model List<Grade>
@{
    ViewData["Title"] = "Grades";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <table class="table table-sm table-bordered table-striped">
        <thead>
            <tr>
@*                <th>ID</th>*@
                <th>Grade Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Grade grade in Model ?? Enumerable.Empty<Grade>())
            {
                <form asp-action="Delete" method="post" asp-route-id="@grade.GradeId">
                    <tr class="">
@*                        <td>@mt.MeetingTypeId</td>*@
                        <td>@grade.GradeName</td>
                        <td class="text-center">
                            <form>
                                <input type="hidden" name="Id" value="@grade.GradeId" />
                                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@grade.GradeId" >Details</a>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@grade.GradeId" >Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                </form>
            }
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary p-2" asp-action="Create" >Create</a>
</div>