@model UserLoginRequestDTO
@inject IViewLocalizer Localizer

<div class="bg-primary text-center text-white p-2"><h4>@Localizer["Log_in"]</h4></div>
<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label>@Localizer["Email"]</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label>@Localizer["Password"]</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <button class="btn btn-primary mt-2" type="submit">@Localizer["Log_in"]</button>
</form>