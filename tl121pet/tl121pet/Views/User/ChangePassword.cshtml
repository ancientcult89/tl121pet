@inject IAuthService _authService
@model SimpleEditFormVM<ChangeUserPasswordRequestDTO>
@inject IViewLocalizer Localizer
<partial name="_Validation"></partial>

<h5 class="bg-@Model.Theme text-white text-center p-2 rounded-top">@Localizer["Change_Password"]</h5>
<div class="shadow-lg p-3 mb-5 bg-white rounded">

    <form asp-action="OldChangePassword" method="post">
        @if (@Model.Mode == FormMode.Edit)
        {
            <div class="form-group" hidden>
                <label asp-for="SelectedItem.UserId"></label>
                <input class="form-control" asp-for="SelectedItem.UserId" readonly/>
            </div>        
        }

        <div class="form-group">
            <label asp-for="SelectedItem.CurrentPassword">@Localizer["Password"]</label>
            <div>
                <span asp-validation-for="SelectedItem.CurrentPassword" class="text-danger"></span>
            </div>
            <input class="form-control" type="password" asp-for="SelectedItem.CurrentPassword" disabled="@Model.IsReadonly"/>
        </div>     
        <div class="form-group">
            <label asp-for="SelectedItem.NewPassword">@Localizer["NewPassword"]</label>
            <div>
                <span asp-validation-for="SelectedItem.NewPassword" class="text-danger"></span>
            </div>
            <input class="form-control" type="password" asp-for="SelectedItem.NewPassword" disabled="@Model.IsReadonly"/>
        </div>   
           <div class="form-group">
            <label asp-for="SelectedItem.ConfirmPassword">@Localizer["ConfirmPassword"]</label>
            <div>
                <span asp-validation-for="SelectedItem.ConfirmPassword" class="text-danger"></span>
            </div>
            <input class="form-control" type="password" asp-for="SelectedItem.ConfirmPassword" disabled="@Model.IsReadonly"/>
        </div>   

        @if (Model.Mode != tl121pet.Storage.FormMode.Details)
        {
            <button class="btn btn-info mt-2" type="submit">
                @Localizer["Save"]
            </button>       
        }
        <a class="btn btn-secondary mt-2" asp-action="UserList">@Localizer["Back"]</a>
    </form>
</div>