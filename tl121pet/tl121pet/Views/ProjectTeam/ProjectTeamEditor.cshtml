@using Microsoft.AspNetCore.Components.Forms
@model SimpleEditFormVM<ProjectTeam>
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedEditFormResource> LocalizerEF
<partial name="_Validation"></partial>

<h5 class="bg-@Model.Theme text-white text-center p-2 rounded-top">@LocalizerEF[Model.Mode.ToString()]</h5>
<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <form asp-action="@Model.Mode" method="post">
        @if (@Model.Mode == FormMode.Edit)
        {
            <div class="form-group" hidden>
                <label asp-for="SelectedItem.ProjectTeamId"></label>
                <input class="form-control" asp-for="SelectedItem.ProjectTeamId" readonly/>
            </div>        
        }
        <div class="form-group">
            <label asp-for="SelectedItem.ProjectTeamName">@Localizer["ProjectTeamName"]</label>
            <div>
                <span asp-validation-for="SelectedItem.ProjectTeamName" class="text-danger"></span>
            </div>
            <input class="form-control" asp-for="SelectedItem.ProjectTeamName" disabled="@Model.IsReadonly"/>
        </div>

        @if (Model.Mode != tl121pet.Storage.FormMode.Details)
        {
            <button class="btn btn-info mt-2" type="submit">
                @LocalizerEF["Save"]
            </button>       
        }
        <a class="btn btn-secondary mt-2" asp-action="ProjectTeamList">@LocalizerEF["Back"]</a>
    </form>
</div>