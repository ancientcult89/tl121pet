@model FollowUpVM
@inject IViewLocalizer Localizer

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <pre>@Model.FollowUpMessage</pre>
</div>

<form asp-action="FollowUp" method="post"
    asp-route-meetingId="@Model.MeetingId"
    asp-route-mode="@Model.Mode"
    asp-route-personId="@Model.PersonId">
        <a class="btn btn-secondary mt-2" asp-action="@Model.Mode" asp-route-id="@Model.MeetingId">Back</a>
        <button class="btn btn-success mt-2" type="submit">
            @Localizer["SendFollowUp"]
        </button>
</form>